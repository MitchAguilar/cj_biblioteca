html:
	
	@@echo "Generando HTML"
	@@pandoc -s -S --toc --section-divs --template ./libro/html/incluir/pandoc/html.template ./libro/markdown/metadata.markdown ./libro/markdown/cap1.1-bienvenido.markdown ./libro/markdown/cap1.2-introduccion-plantillas.markdown ./libro/markdown/cap2.1-creacion-archivos.markdown ./libro/markdown/cap2.2-templateDetails.markdown ./libro/markdown/cap2.3-index.markdown ./libro/markdown/cap2.4-blueprint.markdown libro/markdown/cap2.5-maquetacion.markdown ./libro/markdown/cap2.6-diseno.markdown ./libro/markdown/cap2.7-consideraciones.markdown ./libro/markdown/cap3.1-parametros.markdown ./libro/markdown/cap3.2-personalizacion-modulos.markdown ./libro/markdown/cap3.3-personalizacion-componentes.markdown ./libro/markdown/cap3.4-jquery.markdown ./libro/markdown/cap3.5-paginas-errores.markdown ./libro/markdown/cap4.1-apendice.markdown -o ./libro/html/index.html
	@@echo "HTML generado"
	@@cd libro/html/; echo "Entrando en libro/html/ para generar PDF"; \
	markdown2pdf -N --toc --xetex --template ./incluir/pandoc/latex.template --listings ../markdown/metadata.markdown ../markdown/cap1.1-bienvenido.markdown ../markdown/cap1.2-introduccion-plantillas.markdown ../markdown/cap2.1-creacion-archivos.markdown ../markdown/cap2.2-templateDetails.markdown ../markdown/cap2.3-index.markdown ../markdown/cap2.4-blueprint.markdown ../markdown/cap2.5-maquetacion.markdown ../markdown/cap2.6-diseno.markdown ../markdown/cap2.7-consideraciones.markdown ../markdown/cap3.1-parametros.markdown ../markdown/cap3.2-personalizacion-modulos.markdown ../markdown/cap3.3-personalizacion-componentes.markdown ../markdown/cap3.4-jquery.markdown ../markdown/cap3.5-paginas-errores.markdown ../markdown/cap4.1-apendice.markdown -o ../pdf/desarrollo_plantillas_joomla.pdf